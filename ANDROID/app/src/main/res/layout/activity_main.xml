<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-device transcription + summarization"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSelectVideo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸ“ Select Video"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRecord"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="ðŸŽ¤ Record"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:cornerRadius="12dp"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Progress -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:max="100"
        app:layout_constraintTop_toBottomOf="@id/buttonContainer"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/progressBar"
        android:layout_marginTop="8dp"/>

    <!-- Transcript Section -->
    <LinearLayout
        android:id="@+id/transcriptHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        android:layout_marginTop="24dp">
        
        <TextView
            android:id="@+id/tvTranscriptLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“ Transcript"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveTranscript"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸ’¾ Save"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.TextButton"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/svTranscript"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/transcriptHeader"
        app:layout_constraintBottom_toTopOf="@id/summaryHeader"
        app:layout_constraintHeight_percent="0.25"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transcript will appear here..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textIsSelectable="true"/>

    </ScrollView>

    <!-- Summary Section -->
    <LinearLayout
        android:id="@+id/summaryHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/svTranscript"
        android:layout_marginTop="16dp">
        
        <TextView
            android:id="@+id/tvSummaryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸ“‹ Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"/>
        
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSaveSummary"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="ðŸ’¾ Save"
            android:textSize="12sp"
            android:textAllCaps="false"
            style="@style/Widget.Material3.Button.TextButton"
            android:visibility="gone"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/svSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_background"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/summaryHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvSummary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Summary will appear here..."
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:textIsSelectable="true"/>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
